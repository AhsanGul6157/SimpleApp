<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="mainHorizontalClicked"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/Fast_Delivery_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iamgeview_main_list"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/textview_title_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView_subtitle_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView_price_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView_delivery_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>